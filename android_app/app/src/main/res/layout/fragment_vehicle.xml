<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llvehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Your_car"
                    android:textSize="22dp"
                    android:textColor="@color/dash1"
                    android:fontFamily="@font/robotobold"
                    />

                <View
                    android:layout_width="40dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_view"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center">


                </View>
            </LinearLayout>

            <LinearLayout
                android:layout_toLeftOf="@+id/llvehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView

                    android:id="@+id/vehicleimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chevrolet" />


            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="@font/robotomedium"
                android:text="@string/company_details" />
            <TextView
                android:id="@+id/vehiclecompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/robotomedium"
                android:textColor="@color/dash1"
                android:text="company" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/bg_item_view"
            android:layout_gravity="center">


        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="@font/robotomedium"
                android:text="@string/model_details" />
            <TextView
                android:id="@+id/vehiclemodel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/robotomedium"
                android:textColor="@color/dash1"
                android:text="model" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/bg_item_view"
            android:layout_gravity="center">


        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="@font/robotomedium"
                android:text="@string/serial_details" />
            <TextView
                android:id="@+id/vehicleserial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/robotomedium"
                android:textColor="@color/dash1"
                android:text="serial" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/bg_item_view"
            android:layout_gravity="center">


        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="@font/robotomedium"
                android:text="@string/registration_number_details" />
            <TextView
                android:id="@+id/vehicleregistr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/robotomedium"
                android:textColor="@color/dash1"
                android:text="registration number" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/bg_item_view"
            android:layout_gravity="center">


        </View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="@font/robotomedium"
                android:text="@string/car_year_details" />
            <TextView
                android:id="@+id/vehicle_car_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/robotomedium"
                android:textColor="@color/dash1"
                android:text="car year" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/bg_item_view"
            android:layout_gravity="center">


        </View>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:fontFamily="@font/robotomedium"
            android:text="@string/car_type_details" />
        <TextView
            android:id="@+id/vehicle_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/robotomedium"
            android:textColor="@color/dash1"
            android:text="car type" />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/bg_item_view"
            android:layout_gravity="center">


        </View>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/updatecar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/update_car"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/deletecar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="@string/delete_the_car"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                style="@style/Widget.MaterialComponents.Button"/>
        </LinearLayout>



</RelativeLayout>