<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StatisticsCarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Distance_states"
                    android:textSize="18dp"
                    android:fontFamily="@font/robotobold"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginBottom="10dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="15dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/global_distance"
                                    android:fontFamily="@font/robotomedium"
                                    android:textSize="17dp"
                                    android:layout_marginRight="10dp"/>
                                <TextView
                                    android:id="@+id/detail_global_dist_car"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2000.00"
                                    android:textSize="17dp"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_marginRight="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:fontFamily="@font/montserrat"
                                    android:text="km"/>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/avg_between_verification"
                                    android:fontFamily="@font/robotomedium"
                                    android:textSize="17dp"
                                    android:layout_marginRight="10dp"/>
                                <TextView
                                    android:id="@+id/detail_avg_verif_between_dist_car"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2000.00"
                                    android:textSize="17dp"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_marginRight="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:fontFamily="@font/montserrat"
                                    android:text="km"/>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/avg_between_reparation"
                                    android:fontFamily="@font/robotomedium"
                                    android:textSize="17dp"
                                    android:layout_marginRight="10dp"/>
                                <TextView
                                    android:id="@+id/detail_avg_repare_between_dist_car"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2000.00"
                                    android:textSize="17dp"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_marginRight="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:fontFamily="@font/montserrat"
                                    android:text="km"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp">
                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/chart_distance_global_car"
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Maintenance_states"
                    android:textSize="18dp"
                    android:fontFamily="@font/robotobold"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginBottom="10dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="15dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/verifications"
                                    android:fontFamily="@font/robotomedium"
                                    android:textSize="17dp"
                                    android:layout_marginRight="10dp"/>
                                <TextView
                                    android:id="@+id/detail_vrif_car"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textSize="17dp"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_marginRight="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:fontFamily="@font/montserrat"
                                    android:text="verf"/>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="15dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/reparations"
                                    android:fontFamily="@font/robotomedium"
                                    android:textSize="17dp"
                                    android:layout_marginRight="10dp"/>
                                <TextView
                                    android:id="@+id/detail_repare_car"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textSize="17dp"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_marginRight="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:fontFamily="@font/montserrat"
                                    android:text="rep"/>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="15dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/avg_verification_in_year"
                                    android:fontFamily="@font/robotomedium"
                                    android:textSize="17dp"
                                    android:layout_marginRight="10dp"/>
                                <TextView
                                    android:id="@+id/detail_avg_vrif_car"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textSize="17dp"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_marginRight="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:fontFamily="@font/montserrat"
                                    android:text="verf"/>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/avg_reparation_in_year"
                                    android:fontFamily="@font/robotomedium"
                                    android:textSize="17dp"
                                    android:layout_marginRight="10dp"/>
                                <TextView
                                    android:id="@+id/detail_avg_repare_car"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:textSize="17dp"
                                    android:fontFamily="@font/montserrat"
                                    android:layout_marginRight="5dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="17dp"
                                    android:fontFamily="@font/montserrat"
                                    android:text="repare"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp">
                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/chart_maintenance_global_car"
                                    android:layout_width="match_parent"
                                    android:layout_height="250dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>






            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>