<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SyncDataActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sync Data"
            android:textSize="22dp"
            android:textColor="@color/dash1"
            android:fontFamily="@font/robotobold"
            />

        <View
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_view"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center">


        </View>





    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/info_last_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Sync_services"
            android:textSize="18dp"
            android:fontFamily="@font/robotomedium"
            android:textColor="@color/dis1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:fontFamily="@font/robotoblack"
            android:text="@string/Auto_data"
            android:layout_marginRight="5dp"/>

        <ToggleButton
            android:id="@+id/sync_data_toggle"
            android:layout_width="60dp"
            android:layout_height="40dp"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/sync_manual_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:id="@+id/data_is_synced"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="data is"
                android:fontFamily="@font/robotobold"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/data_syncro_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="synced"
                android:fontFamily="@font/robotobold"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:text="cars"/>

            <TextView
                android:id="@+id/loading_cars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="loading"/>
            <ProgressBar
                android:id="@+id/progress_cars"
                android:layout_marginLeft="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:text="service centers"/>

            <TextView
                android:id="@+id/loading_services_centers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="loading"/>
            <ProgressBar
                android:id="@+id/progress_service_center"
                android:layout_marginLeft="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:text="verification"/>

            <TextView
                android:id="@+id/loading_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="loading"/>
            <ProgressBar
                android:id="@+id/progress_verification"
                android:layout_marginLeft="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotomedium"
                android:text="reparation"/>

            <TextView
                android:id="@+id/loading_reparation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="loading"/>
            <ProgressBar
                android:id="@+id/progress_reparation"
                android:layout_marginLeft="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"/>

        </LinearLayout>




    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/button_sync_data"
            android:text="sync"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/robotomedium"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>


    </LinearLayout>

    </LinearLayout>




</LinearLayout>