<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyingCar">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/generating_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Generating_Code"
                android:fontFamily="@font/robotobold"
                android:textSize="22dp"/>
            <ProgressBar
                android:id="@+id/progress_generating_key"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/key_is_generated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Your_buying_Code"
                android:fontFamily="@font/robotobold"
                android:textSize="22dp"/>
            <TextView
                android:id="@+id/the_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1523458"
                android:fontFamily="@font/robotomediumitalic"
                android:textSize="22dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/Send_this_key"
                android:fontFamily="@font/robotomedium"
                android:textSize="22dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/wait_for"
                android:fontFamily="@font/robotomedium"
                android:textSize="22dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/car_buyed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/car_buyed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Syncing_data"
                android:fontFamily="@font/robotobold"
                android:textSize="22dp"/>
            <ProgressBar
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>




    </LinearLayout>

</RelativeLayout>